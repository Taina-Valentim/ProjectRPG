@model string

@if (!String.IsNullOrEmpty(Model))
{
    var statusMessageClass = ViewContext.ModelState.IsValid ? "success" : "danger";
    <div class="container alert alert-@statusMessageClass alert-dismissible notificacao notificacao-@statusMessageClass" role="alert">
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        @Model
    </div>
}
