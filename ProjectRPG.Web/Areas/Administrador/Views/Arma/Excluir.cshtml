@using Microsoft.AspNetCore.Identity
@model Arma

@{
    ViewData["Title"] = "Excluir Arma";
}

@inject SignInManager<RPGUser> SignInManager

@if (SignInManager.IsSignedIn(User))
{
    <a asp-controller="Arma" asp-action="Index">
        <svg id="btn-voltar" xmlns="http://www.w3.org/2000/svg" width="45" height="45" fill="#008C59" class="bi bi-arrow-left-circle" viewBox="0 0 16 16">
            <path fill-rule="evenodd" d="M1 8a7 7 0 1 0 14 0A7 7 0 0 0 1 8m15 0A8 8 0 1 1 0 8a8 8 0 0 1 16 0m-4.5-.5a.5.5 0 0 1 0 1H5.707l2.147 2.146a.5.5 0 0 1-.708.708l-3-3a.5.5 0 0 1 0-.708l3-3a.5.5 0 1 1 .708.708L5.707 7.5z"></path>
        </svg>
    </a>
    <div class="container cartao">
        <div class="cartao-topo adicionar">
            <h2 class="cartao-titulo">@ViewData["Title"]</h2>
        </div>

        <div id="cartao-conteudo" class="cartao-conteudo adicionar">
            <form method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>

                <label asp-for="Nome" class="label-cadastro"></label>
                <input asp-for="Nome" class="input-cadastro" disabled />

                <label asp-for="Descricao" class="label-cadastro"></label>
                <div class="descricao">
                    <textarea asp-for="Descricao" class="input-cadastro" disabled></textarea>
                </div>

                <label asp-for="Dano" class="label-cadastro"></label>
                <input asp-for="Dano" class="input-cadastro number" disabled />

                <label asp-for="Alcance" class="label-cadastro"></label>
                <input asp-for="Alcance" class="input-cadastro number" disabled />

                <label asp-for="UsaMunicao" class="label-cadastro"></label>
                <input type="text" asp-for="UsaMunicao" class="input-cadastro" disabled value="@(Model.UsaMunicao ? "Sim" : "Não")" />
                
                <label asp-for="TipoMunicao" class="label-cadastro"></label>
                <input asp-for="TipoMunicao" class="input-cadastro" disabled />

                <label asp-for="MunicaoMaxima" class="label-cadastro"></label>
                <input asp-for="MunicaoMaxima" class="input-cadastro number" disabled />

                <label asp-for="MunicaoAtual" class="label-cadastro"></label>
                <input asp-for="MunicaoAtual" class="input-cadastro number" disabled />

                <div class="container-botao">
                    <button type="submit" class="col-5 botao-submit">Excluir</button>
                </div>
            </form>
        </div>
    </div>
}
else
{
    if (User.IsInRole("Administrador"))
    {
        <script type="text/javascript">
            window.location.href = "/Administrador/Home/Index";
        </script>
    }
    else
    {
        <script type="text/javascript">
            window.location.href = "/Jogador/Home/Index";
        </script>
    }

}



