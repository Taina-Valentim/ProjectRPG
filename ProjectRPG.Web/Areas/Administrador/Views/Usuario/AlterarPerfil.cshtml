@model UsuarioViewModel

<div class="card shadow border-0 mt-4">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Alterar Perfil de @Model.Usuario.UserName</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <form method="post">
            <input asp-for="Usuario.Id" hidden />
            <div class="border p-3 mt-4">

                <div class="form-floating mb-3 col-md-6">
                    <select asp-for="Role" asp-items="@Model.RoleList" class="form-select">
                        <option disabled selected>-Selecionar Perfil-</option>
                    </select>
                </div>

                <div class="row mt-3">
                    <div class="col-6 col-md-3">
                        <button type="submit" class="btn btn-primary form-control">Salvar</button>
                    </div>
                    <div class="col-6 col-md-3">
                        <a asp-controller="Usuario" asp-action="Index" class="btn btn-secondary border  form-control">
                            Voltar
                        </a>
                    </div>
                </div>


            </div>
        </form>
    </div>
</div>


@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial"/>
    }
}