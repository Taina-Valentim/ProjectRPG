@model UsuarioViewModel

<div class="card shadow border-0 mt-4">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Excluir Usuário</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <form method="post">
            <input asp-for="Usuario.Id" hidden />
            <div class="border p-3 mt-4">

                <div class="form-floating py-2 col-12">
                    <input asp-for="Usuario.UserName" disabled class="form-control border-0 shadow" />
                    <label asp-for="Usuario.UserName" class="ms-2"></label>
                </div>

                <div class="form-floating py-2 col-12">
                    <input asp-for="Usuario.Email" disabled class="form-control border-0 shadow" />
                    <label asp-for="Usuario.Email" class="ms-2"></label>
                </div>

                <div class="form-floating py-2 col-12">
                    <input asp-for="Usuario.PhoneNumber" disabled class="form-control border-0 shadow" />
                    <label asp-for="Usuario.PhoneNumber" class="ms-2"></label>
                </div>

                <div class="form-floating py-2 col-12">
                    <input asp-for="Usuario.DataNascimento" disabled class="form-control border-0 shadow" />
                    <label asp-for="Usuario.DataNascimento" class="ms-2"></label>
                </div>

                <div class="form-floating py-2 col-12">
                    <input asp-for="Role" disabled class="form-control border-0 shadow" />
                    <label asp-for="Role" class="ms-2"></label>
                </div>


                <div class="row mt-3">
                    <div class="col-6 col-md-3">
                        <button type="submit" class="btn btn-primary form-control">Excluir</button>
                    </div>
                    <div class="col-6 col-md-3">
                        <a asp-controller="Usuario" asp-action="Index" class="btn btn-secondary border  form-control">
                            Voltar
                        </a>
                    </div>
                </div>


            </div>
        </form>
    </div>
</div>
